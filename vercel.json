{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "api/index.js"
    },
    {
      "src": "/api/webhook",
      "dest": "api/webhook.js"
    },
    {
      "src": "/api/line-login",
      "dest": "api/webhook.js"
    },
    {
      "src": "/api/messages",
      "dest": "api/messages.js"
    },
    {
      "src": "/api/markAsRead",
      "dest": "api/messages.js"
    },
    {
      "src": "/api/uploadImage",
      "dest": "api/messages.js"
    }
  ]
}